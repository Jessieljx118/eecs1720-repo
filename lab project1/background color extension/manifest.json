{
  "manifest_version": 2,
  "name": "Jiaxi Li change background color extension",
  "description": "This extension allows the user to change the background color of the current page.",
  "version": "1.0",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "32": "icon32.png",    
    "16": "icon16.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html",
    "default_title": "click it!"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}